@model IEnumerable<OnlineShopping.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "Cancelled Orders";
}

<h2>Cancelled Orders</h2>
@if (Model.Count() > 0 && Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.ActionLink("Details", "OrderDetails",new { orderId = item.OrderId})
                    @* Send confirmation email to customer and delete from orders table  *@
                </td>
            </tr>
        }

    </table>
}

else
{
    <h2>No orders Cancelled!</h2>
    @Html.ActionLink("Back","ProductsList","Product")
}